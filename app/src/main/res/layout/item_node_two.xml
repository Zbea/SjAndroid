<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space_dimen"
    android:background="@color/color_gray_bg">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/space_dimen"
        android:src="@mipmap/user_default"
        />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:layout_toRightOf="@+id/iv_header"
        android:layout_alignTop="@+id/iv_header"
        />



    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_dimen"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人投资(T)"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_person_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="0"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line"/>



</RelativeLayout>