<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_dimen"
        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/rg_buy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_left"
                style="@style/rb_style1"
                android:checked="true"
                android:text="USDT" />

            <RadioButton
                android:id="@+id/rb_right"
                style="@style/rb_style1"
                android:text="FIL" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:text="单价："
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:text="￥0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:text="当前数量："
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:text="0"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="5dp"

            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_line_bottom">

            <TextView
                android:layout_width="@dimen/dp_84"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14"
                android:text="用户名："
                />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_666666"
                android:hint="请输入转入用户名"
                android:textColorHint="@color/color_hint"
                android:layout_height="wrap_content"
                android:background="@color/color_translucent"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_line_bottom">

            <TextView
                android:layout_width="@dimen/dp_84"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14"
                android:text="转出数量："
                />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_666666"
                android:hint="请输入转出数量"
                android:inputType="number"
                android:textColorHint="@color/color_hint"
                android:layout_height="wrap_content"
                android:background="@color/color_translucent"/>




        </LinearLayout>





    </LinearLayout>

    <Button
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_dimen"
        android:text="转账"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_main_solid_5dp_coner"
        android:textColor="@color/color_white"
        android:layout_margin="@dimen/space_dimen"/>



</LinearLayout>