<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <include layout="@layout/toolbar"
        android:id="@+id/mToolBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_dimen"
        android:background="@drawable/bg_white_solid_5dp_coner"
        android:orientation="vertical"
        android:padding="@dimen/space_dimen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:focusable="false"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_5"
            android:hint="输入手机号"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="@color/color_hint"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_dimen"
            android:text="验证码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_gray_solid_5dp_coner">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:background="@null"
                android:hint="@string/mine_plz_input_check_code"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/mine_get_check_code"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/space_dimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置资金密码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_zijin_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/input_deal_pwd"
            android:inputType="textPassword"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_marginTop="@dimen/space_dimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次确认"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_zijin_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/mine_deal_password_again"
            android:inputType="textPassword"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/tv_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_main_solid_5dp_coner"
            android:text="@string/confirm"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_white"
         />
    </LinearLayout>


</LinearLayout>