<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_dimen"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_extract"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rb_line_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="USDT"
                    android:textColor="@color/selector_black_main_color"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rb_line_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="FIL"
                    android:textColor="@color/selector_black_main_color"
                    android:textSize="16sp" />
            </RadioGroup>


            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tibi_address"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:background="@drawable/bg_line_bottom">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/tv_scan"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginRight="5dp"
                    android:hint="@string/input_tibi_address"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/tv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_scan" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/tibi_num"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:background="@drawable/bg_line_bottom">

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/zuidatiqu"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_hint"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/all"
                    android:textColor="@color/color_main" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_lest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="可用0USDT"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="手续费"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_need"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:background="@drawable/bg_line_bottom"
                android:text="0"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shouxu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="手续费为提币数量的5%"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="实际到账"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shiji"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:background="@drawable/bg_line_bottom"
                android:text="0"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/jiaoyi_pwd"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_line_bottom"
                android:hint="@string/input_deal_pwd"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="14sp" />

            <Button
                android:id="@+id/tv_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_main_solid_5dp_coner"
                android:text="@string/tibi"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_14"
                />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>
