<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/mToolBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_white_solid_5dp_coner"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="24dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="12sp" />

        <EditText
            android:focusable="false"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="8dp"
            android:text="13487"
            android:textColor="@color/hintTextColor"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="验证码"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_gray_solid_5dp_coner">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="@string/mine_plz_input_check_code"
                android:paddingLeft="8dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/hintTextColor"
                android:textSize="14sp" />

            <TextView
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:text="@string/mine_get_check_code"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置资金密码"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_zijin_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="8dp"
            android:hint="@string/input_deal_pwd"
            android:inputType="textPassword"
           android:textColorHint="@color/hintTextColor"
            android:textColor="@color/blue"
            android:textSize="14sp" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次确认"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_zijin_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_gray_solid_5dp_coner"
            android:paddingLeft="8dp"
            android:hint="@string/mine_deal_password_again"
            android:inputType="textPassword"
            android:textColorHint="@color/hintTextColor"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tv_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_blue_solid_5dp_coner"
            android:text="@string/confirm"
            android:textColor="@color/color_white"
         />
    </LinearLayout>


</LinearLayout>