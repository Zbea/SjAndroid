<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/bg_main_arch_bottom" />

    <androidx.appcompat.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        android:id="@+id/toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dimen"
            android:gravity="center_vertical"
            android:elevation="@dimen/dp_5"
            >

            <ImageView
                android:id="@+id/mImgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back_white"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="增值服务"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/sp_16"
                />

        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资总金额"
            android:textColor="@color/color_666666_night"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_fil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_investment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_160"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_left"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="@color/selector_main_color"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/bg_gray_stroke_arc"
            android:text="进行中"
            android:checked="true" />
        <RadioButton
            android:id="@+id/rb_right"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@null"
            android:textColor="@color/selector_main_color"
            android:gravity="center"
            android:background="@drawable/bg_gray_stroke_arc"
            android:text="已结束" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_going"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rg_investment"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="+立即购买增值服务产品"
            android:background="@drawable/bg_main_solid_arc"
            android:textSize="@dimen/sp_14"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rg_investment"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_listed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:scrollbars="none"/>

    </LinearLayout>


</RelativeLayout>