<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="Erc20—USDT"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:checked="true"
                    android:textColor="@color/color_white"
                    android:background="@drawable/icon_rb_charge_left_select"/>
                <RadioButton
                    android:id="@+id/rb_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="OMNI—USDT"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_white"
                    android:background="@drawable/icon_rb_charge_right_select"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="收款地址二维码"
                android:textColor="@color/home_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="充值地址"
                android:textColor="@color/hintTextColor"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@drawable/bg_charge_copy"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/home_text"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/icon_charge_copy"/>

            </LinearLayout>



            <Button
                android:id="@+id/tv_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_blue_solid_5dp_coner"
                android:text="保存二维码"
                android:visibility="gone"
                android:textColor="@color/color_white"
                app:layout_constraintTop_toBottomOf="@+id/ll_code" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:textSize="12sp"
                android:text="档次说明:"
                android:textColor="@color/hintTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:text="1、此地址只接收"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_usdt"
                    android:text="Erc20-USDT"
                    android:textSize="10sp"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="10sp"
                    android:text="，发送其他币种到此地址将不可找回"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:text="2、充值到账需要2个网络确认，请耐心等待。"
                android:textColor="@color/hintTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:text="3、100"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_usdt1"
                    android:textSize="10sp"
                    android:text="Erc20-USDT"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="10sp"
                    android:text="起充。"
                    android:textColor="@color/hintTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>
