<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0USDT"
                android:textColor="@color/redF4"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0年"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="矿机总价值"
                android:textColor="@color/hintTextColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="合同周期"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/default_color" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="投入金额"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_yuji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="预计每日收益:0FIL"
                        android:textColor="@color/hintTextColor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="14dp">

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edit"
                        android:hint="请输入数量（最低100USDT）"
                        android:inputType="numberDecimal"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/hintTextColor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:singleLine="true"
                        android:text="USDT"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_dimen">

                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="账号余额：0.00"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/hintTextColor"
                        android:textSize="14sp" />


                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/default_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="个人信息填写"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="9dp"
                android:background="#F2F6FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:singleLine="true"
                android:text="租用成功公司会快递一份租用合同，请务必填写真实准确信息"
                android:textColor="@color/redF4"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_edit"
                android:hint="真实姓名"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/hintTextColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_edit"
                android:hint="手机号码"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/hintTextColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_edit"
                android:gravity="top"
                android:hint="收货地址"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/hintTextColor"
                android:textSize="14sp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_dimen"
                android:paddingRight="@dimen/space_dimen"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读同意"
                    android:textColor="@color/color_black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《矿机租赁服务协议》"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mTvLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="@dimen/space_dimen"
                android:background="@drawable/bg_blue_solid_5dp_coner"
                android:gravity="center"
                android:text="立即租用"
                android:layout_marginLeft="@dimen/space_dimen"
                android:layout_marginRight="@dimen/space_dimen"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>