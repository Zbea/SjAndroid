<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:paddingLeft="@dimen/space_dimen"
    android:paddingRight="@dimen/space_dimen"
    android:clickable="true"
    android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:hint="请输入绑定手机号"
                android:inputType="number"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:hint="请填写验证码"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓 名："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:hint="请填写真实姓名"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_id_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:digits="0123456789xyzXYZ"
                android:hint="请填写身份证号码"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现居住地："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:hint="请填写当前居住详细地址"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@color/color_translucent"
                android:hint="请填写邮箱"
                android:inputType="textEmailAddress"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_main_solid_5dp_coner"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16" />


</LinearLayout>