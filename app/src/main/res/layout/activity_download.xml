<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_download" />

    <androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dimen"
            android:elevation="@dimen/dp_5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mImgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/icon_back_white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:id="@+id/ll_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:background="@mipmap/icon_download_scan_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/qrCodeView"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="掃碼下載"
            android:textColor="#D0FDFF"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_below="@+id/ll_scan"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下載鏈接"
            android:textColor="#D0FDFF"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/bg_download_solid_5dp_corner"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_dimen"
        android:layout_below="@+id/ll_address"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="70dp"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/bg_white_stroke_5dp_coner"
        android:gravity="center"
        android:text="復製鏈接"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

</RelativeLayout>