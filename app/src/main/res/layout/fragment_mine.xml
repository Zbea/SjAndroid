<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_refresh_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@mipmap/bg_top02"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="18dp"
                        >

                        <ImageView
                            android:id="@+id/iv_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/mine_icon_message" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/shape_red_solid_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_14"
                        android:layout_marginTop="93dp"
                        android:layout_marginRight="@dimen/margin_14"
                        android:background="@drawable/mine_login_box_bg"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/mTvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/margin_14"
                            android:layout_marginTop="45dp"
                            android:layout_marginRight="@dimen/margin_14"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="USER"
                            android:textColor="@color/color_666666"
                            android:textSize="23sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/mTvMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/margin_14"
                            android:layout_marginRight="@dimen/margin_14"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/color_666666"
                            android:textSize="14sp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/mine_login_box_bg"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">



                        <RelativeLayout
                            android:id="@+id/layout_team"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@mipmap/icon_mine_shouyi"
                                android:drawablePadding="15dp"
                                android:gravity="center"
                                android:text="我的收益"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_invite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@mipmap/icon_mine_yaoqing"
                                android:drawablePadding="15dp"
                                android:gravity="center"
                                android:text="我的邀请"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_jiedian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@mipmap/icon_mine_jiedian"
                                android:drawablePadding="15dp"
                                android:gravity="center"
                                android:text="我的团队"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/layout_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_contract_manager" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="合同管理"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/tv_dot"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:background="@drawable/shape_red_solid_dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/layout_certification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_certification_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="实名认证"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/tv_dot"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:background="@drawable/shape_red_solid_dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_contact" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="联系我们"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_us" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="关于我们"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/layout_download"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:clickable="true"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_download" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="下载地址"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/layout_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ripple_selector"
                            android:clickable="true"
                            android:paddingLeft="@dimen/space_dimen"
                            android:paddingTop="7dp"
                            android:paddingRight="@dimen/space_dimen"
                            android:paddingBottom="7dp"
                            android:layout_marginBottom="7dp"
                            tools:ignore="DuplicateIds">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/icon_mine_setting" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/iv"
                                android:text="账号设置"
                                android:textColor="#666666"
                                android:textSize="16sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/mine_icon_more"
                                android:drawablePadding="12dp" />
                        </RelativeLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="175dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/iv_certification"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/icon_mine_certification"
                        />
                </LinearLayout>



                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="102dp"
                    android:src="@mipmap/user_default"
                    />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>




</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>