<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_refresh_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_main_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/margin_20"
                android:src="@mipmap/user_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_certification"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_mine_certification" />
            </LinearLayout>

            <TextView
                android:id="@+id/mTvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_dimen"
                android:gravity="center"
                android:maxLines="1"
                android:text="USER"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mTvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_dimen"
                android:background="@drawable/bg_ripple_selector"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_mine_shouyi"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="我的收益"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_selector"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_mine_yaoqing"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="我的邀请"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_jiedian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_selector"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">


                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_jiedian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_dimen"
                    android:layout_toRightOf="@+id/iv"
                    android:text="我的团队"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_selector"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_certification_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_dimen"
                    android:layout_toRightOf="@+id/iv"
                    android:text="实名认证"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/tv_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/shape_red_solid_dot"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_selector"
                android:clickable="true"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_dimen"
                    android:layout_toRightOf="@+id/iv"
                    android:text="下载地址"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_selector"
                android:padding="@dimen/space_dimen"
                tools:ignore="DuplicateIds">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_dimen"
                    android:layout_toRightOf="@+id/iv"
                    android:text="账号设置"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/mine_icon_more"
                    android:drawablePadding="12dp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#F2F2F2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="联系我们"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/color_666666" />

            <LinearLayout
                android:id="@+id/layout_about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_mine_us" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="关于我们"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>