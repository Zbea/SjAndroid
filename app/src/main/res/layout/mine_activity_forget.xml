<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_login_bg">


    <TextView
        android:id="@+id/mTvJump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@mipmap/icon_back_white"
        android:textColor="@color/color_white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/space_dimen"
        android:text="忘记密码"/>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvJump"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_dimen"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mEtaccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/bg_transparent_solid_5dp_coner"
                android:textColorHint="#bbffffff"
                android:textColor="@color/color_333333"
                android:hint="请输入用户名"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/mEtPhoneOrEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/bg_transparent_solid_5dp_coner"
                android:textColorHint="#bbffffff"
                android:textColor="@color/color_333333"
                android:hint="请输入手机号"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:inputType="text"
                />

            <RelativeLayout
                android:id="@+id/mRelaCode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@drawable/bg_transparent_solid_5dp_coner"
                >

                <EditText
                    android:id="@+id/mEtCheckCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_get_code"
                    android:background="@null"
                    android:hint="@string/mine_plz_input_check_code"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="#bbffffff"
                    android:textSize="@dimen/sp_14"  />

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/mine_get_check_code"
                    android:textColor="@color/color_main"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <EditText
                android:id="@+id/mEtPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/bg_transparent_solid_5dp_coner"
                android:hint="请输入登录密码（6~18位英文数字组合）"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="18"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="#bbffffff"
                android:textSize="@dimen/sp_14"   />


            <EditText
                android:id="@+id/mEtPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/bg_transparent_solid_5dp_coner"
                android:hint="@string/mine_plz_input_password_again"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="18"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="#bbffffff"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/mTvForget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dimen"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_main_solid_5dp_coner"
                android:gravity="center"
                android:text="找回密码"
                android:textColor="@color/color_white"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>