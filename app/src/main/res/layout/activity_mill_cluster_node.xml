<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_dimen"
        android:background="@drawable/bg_main_solid_5dp_coner"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="直推算力(T)"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0"
                android:textColor="@color/color_666666_night"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="个人投入算力(T)"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0"
                android:textColor="@color/color_666666_night"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_80"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="团队业绩(FIL)"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0"
                android:textColor="@color/color_666666_night"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="业绩收益(FIL)"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_team_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="0"
                android:textColor="@color/color_666666_night"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_dimen"
        android:layout_marginRight="@dimen/space_dimen"
        android:background="@drawable/bg_gray_solid_5dp_coner" />


</LinearLayout>