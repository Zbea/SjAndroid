<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_solid_5dp_coner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTvCheckTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18sp"
        android:text="@string/safe_check"
        android:textSize="15sp"
        android:visibility="gone"
        android:textColor="@color/color_333333"
        />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mEtCheck"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_gray_solid_5dp_coner"
        android:hint="@string/input_deal_password"
        android:textColorHint="@color/color_hint"
        android:textSize="14sp"
        android:paddingLeft="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_centerVertical="true"
        android:textColor="@color/color_333333"
        android:inputType="textPassword"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/mTvForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="找回密码?"
        android:textSize="10dp"
        android:paddingRight="14dp"
        android:textColor="@color/redF4"
        />
    <!--</RelativeLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/mTvCheckCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            />
        <TextView
            android:id="@+id/mTvCheckConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/color_main"
            />


    </LinearLayout>

</LinearLayout>