<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hazz.kuangji">

    <!-- 获取GSM网络信息状态，如当前的网络连接是否有效 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许访问Wi-Fi网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许获取Wi-Fi网络状态改变信息 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <!-- SD 卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.hazz.kuangji.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/kuangji_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.hazz.kuangji.ui.activity.LauncherActivity"
            android:theme="@style/AppLaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hazz.kuangji.ui.activity.MainActivity" />
        <activity android:name="com.hazz.kuangji.ui.activity.LoginActivity" />
        <activity android:name="com.hazz.kuangji.ui.activity.ForgetPwdActivity" />
        <activity android:name=".ui.activity.MineContactActivity" />
        <activity android:name="com.hazz.kuangji.ui.activity.RegisterActivity" />
        <activity android:name="com.hazz.kuangji.ui.activity.CountryActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.InviteActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.InviteRecordActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.SettingActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.SafeActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.NodeActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.TibiActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.TibiRecordActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.ChargeActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.ChargeRecordActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.TouziActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.TouziConfirmActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.FindZijinPwdActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.ModifyPwdActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.MsgListActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.MsgDescActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.IncomingActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.TouziRecordActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.ScanCoinAddressActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.ZujieActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.MingxiRecordActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.RuleActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.NodeSecondActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.RegistRuleActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.KuangjiDescActivity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.KuangjiDesc2Activity"/>
        <activity android:name="com.hazz.kuangji.ui.activity.SignRecordActivity"/>
        <activity android:name=".ui.activity.ExchangeBuyActivity"/>
        <activity android:name=".ui.activity.ExchangeOrderBuyDetailsActivity"/>
        <activity android:name=".ui.activity.ExchangeCoinActivity"/>
        <activity android:name=".ui.activity.ExchangeOrderSaleDetailsActivity"/>
        <activity android:name=".ui.activity.ExchangeSaleActivity"/>
        <activity android:name=".ui.activity.ExchangeRecordActivity"/>
        <activity android:name=".ui.activity.ExchangeCoinRecordActivity"/>

        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />

        <provider
            android:name=".widget.BuglyFileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="name,authorities,exported,grantUriPermissions">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"
                tools:replace="name,resource"/>
        </provider>

    </application>

</manifest>